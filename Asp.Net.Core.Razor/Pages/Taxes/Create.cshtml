@page
@model Asp.Net.Core.Razor.Pages.Taxes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>PersonalTax</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonalTax.PostalCode" class="control-label"></label>
                <input asp-for="PersonalTax.PostalCode" class="form-control" />
                <select asp-for="PersonalTax.PostalCode" asp-items="@Model.taxCodeValues"></select>
                <span asp-validation-for="PersonalTax.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalTax.TaxableIncome" class="control-label"></label>
                <input asp-for="PersonalTax.TaxableIncome" class="form-control" />
                <span asp-validation-for="PersonalTax.TaxableIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalTax.LogTime" class="control-label"></label>
                <input asp-for="PersonalTax.LogTime" class="form-control" />
                <span asp-validation-for="PersonalTax.LogTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
